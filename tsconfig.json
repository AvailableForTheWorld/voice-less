{
  "include": ["playground", "src", "jsconfig.json"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "jsx": "preserve",
  }
}
